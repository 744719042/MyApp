<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.base.widget.HorizontalBannerView
        android:id="@+id/horizontal_banner_view"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.example.base.widget.HorizontalBannerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <com.example.base.widget.VerticalBannerView
        android:id="@+id/vertical_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.base.widget.VerticalBannerView>

    <com.example.base.widget.custom.AbNormalLayout
        android:id="@+id/home_abnormal_layout"
        app:cellPadding="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#66999999"
        app:fiveCardsAspect="0.65"
        app:twoCardsAspect="0.3"
        app:threeCardsAspect="0.4"
        app:fourCardsAspect="0.65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.base.widget.custom.AbNormalLayout>

    <ImageView
        android:id="@+id/banner_view"
        android:src="@drawable/home_bottom_banner"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</LinearLayout>